{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "semi": false
      }
    },
    {
      "files": "*.json",
      "options": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
      }
    },
    {
      "files": "*.js",
      "options": {
        "printWidth": 80,
        "tabWidth": 4,
        "singleQuote": true,
        "semi": false
      }
    },
    {
      "files": "*.ts",
      "options": {
        "semi": false,
        "singleQuote": true
      }
    },
    {
      "files": "*.d.ts",
      "options": {
        "semi": false,
        "singleQuote": true
      }
    }
  ]
}
